{
  "name": "ai-code-helper",
  "displayName": "AI Code Helper",
  "description": "VS Code extension to fix code using AI (Gemma or Ollama)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ai-helper.fixCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-code-helper.fixCode",
        "title": "Fix Code with AI"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@vscode/test-electron": "^2.3.8",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "dotenv": "^16.4.5"
  }
}
